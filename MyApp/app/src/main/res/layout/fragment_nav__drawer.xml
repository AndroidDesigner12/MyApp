<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.william.myapp.NavigationDrawer.Nav_Drawer"
    android:background="#EEE"

    >

    <LinearLayout
        android:id="@+id/LinearNavView"
        android:layout_width="280dp"
        android:layout_height="180dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/BackgroundIDNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navHeadColor"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/asd"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/NavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="asdasdasdasd"
            style="@style/Text"
            android:layout_gravity="bottom|end"
            />

    </FrameLayout>





    </LinearLayout>

    <ListView
        android:layout_below="@+id/LinearNavView"
        android:id="@+id/ListViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>





</RelativeLayout>
